<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- MainActvity Menu items -->
    <style name="menuItem" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">@dimen/menu_width</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:background">@drawable/activity_text_view</item>
        <item name="android:layout_margin">@dimen/menu_margin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- MainActvity Store Menu item -->
    <style name="menuItemStore" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">@dimen/menu_width</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:background">@drawable/store_text_view</item>
        <item name="android:layout_margin">@dimen/menu_margin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>


    </style>

</resources>
